<h3>
    <a href="{{post.link}}" ng-show="post.link">{{post.title}}</a>
    <span ng-hide="post.link">{{post.title}}</span>
</h3>
<article ng-show="post.body">{{post.body}}</article>

<!-- comments -->
<h4>Comments</h4>

<ul class="posts-list list-group">
    <li class="post list-group-item" ng-repeat="comment in post.comments | orderBy: '-upvotes'">

        <!-- comment voting arrows -->
        <span class="glyphicon glyphicon-arrow-up pull-left" ng-click="incrementUpvotes(comment)"></span>
        <span class="badge pull-left">{{comment.upvotes}}</span>
        <span class="glyphicon glyphicon-arrow-down pull-left" ng-click="decrementUpvotes(comment)"></span>
         &mdash; by {{comment.author}}

        <!-- comment body -->
        <div class="comment-body">{{comment.body}}</div>

    </li>
</ul>