<!-- posts index -->
<ul class="posts-list list-group">
    <li class="list-group-item" ng-repeat="post in posts | orderBy: '-upvotes'">

        <!-- voting arrows -->
        <span class="glyphicon glyphicon-arrow-up" ng-click="incrementUpvotes(post)"></span>
        <span class="glyphicon glyphicon-arrow-down" ng-click="decrementUpvotes(post)"></span>

        <!-- post info -->
        <span class="post">
            <span class="badge">{{post.upvotes}}</span>
            <a href="{{post.link}}" ng-show="post.link">{{post.title}}</a>
            <span ng-hide="post.link">{{post.title}}</span>
        </span>

        <!-- comments info -->
        <span>
            <a href="/posts/{{posts.indexOf(post)}}">{{post.comments.length}} comments</a>
        </span>
    </li>
</ul>

<aside class="col-md-4">
    <!-- add post form -->
    <form class="post-add-form" ng-submit="addPost()">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="title" ng-model="title">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="link" ng-model="link">
        </div>

        <button class="btn btn-primary" type="submit">submit post</button>
    </form>
</aside>