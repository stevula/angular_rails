<!-- posts index -->
<ul class="posts-list list-group">
    <li class="post list-group-item" ng-repeat="post in posts | orderBy: '-upvotes'">

        <!-- voting arrows -->
        <span class="glyphicon glyphicon-arrow-up pull-left" ng-click="incrementUpvotes(post)"></span>
        <span class="badge pull-left">{{post.upvotes}}</span>
        <span class="glyphicon glyphicon-arrow-down pull-left" ng-click="decrementUpvotes(post)"></span>

        <!-- post info -->
        <span class="post">
            <a href="{{post.link}}" ng-show="post.link">{{post.title}}</a>
            <span ng-hide="post.link">{{post.title}}</span>
        </span>
        &mdash;

        <!-- comments info -->
        <span>
            <a href="/posts/{{posts.indexOf(post)}}">{{post.comments.length}} comments</a>
        </span>
    </li>
</ul>
