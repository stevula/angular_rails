<form class="form-inline" ng-submit="login(loginForm)">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" ng-model="loginForm.username" 
      required="required" class="form-control">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" ng-model="loginForm.password" 
      required="required" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary btn-sm">Sign in</button>
</form>

<a ng-href="/signup">Sign up</a>